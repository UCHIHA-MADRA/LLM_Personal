{
  "name": "personal-llm",
  "version": "2.0.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Personal LLM â€” Your Private AI Assistant. Runs 100% on your hardware.",
  "author": "Personal LLM Team",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "next build && electron .",
    "electron:build": "next build && electron-builder",
    "tauri": "tauri"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-serve": "^3.0.1",
    "framer-motion": "^12.34.3",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.personalllm.app",
    "productName": "Personal LLM",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "**/*",
      "!app",
      "!.next",
      "!src-tauri",
      "!dist-electron"
    ],
    "extraResources": [
      {
        "from": "../personal_llm",
        "to": "personal_llm",
        "filter": [
          "**/*.py",
          "**/*.json",
          "bin/**/*"
        ]
      },
      {
        "from": "python-embed",
        "to": "python-embed",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    }
  }
}